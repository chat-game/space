{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^db:generate","^build"],
      "outputs": [".output/**", "dist/**"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false
    },
    "lint": {},
    "lint:fix": {},
    "typecheck": {},
    "clean": {
      "cache": false
    },
    "clean:modules": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    }
  }
}