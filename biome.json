{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noStaticOnlyClass": "warn"
      }
    },
    "ignore": ["node_modules", "tmp"]
  },
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space"
  }
}
