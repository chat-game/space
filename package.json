{
  "name": "app",
  "type": "module",
  "version": "0.2.0",
  "description": "Chat Game for Twitch",
  "author": "Nick Kosarev <hmbanan666@hotmail.com>",
  "license": "MIT",
  "homepage": "https://chatgame.space",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chat-game/app.git"
  },
  "bugs": {
    "url": "https://github.com/chat-game/app/issues"
  },
  "keywords": [
    "game",
    "online",
    "twitch"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-kit sync && vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig tsconfig.json --watch",
    "test": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:deps": "madge -c --extensions ts ./src",
    "release": "yarn run check && yarn run test && yarn run lint && yarn run lint:deps && yarn run build && changelogen --release --push",
    "prepare": "husky"
  },
  "dependencies": {
    "@hmbanan666/chat-game-api": "^0.1.15",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/colors": "^3.0.0",
    "@twurple/api": "^7.1.0",
    "@twurple/auth": "^7.1.0",
    "howler": "^2.2.4",
    "javascript-time-ago": "^2.5.10",
    "jsonwebtoken": "^9.0.2",
    "lucide-svelte": "^0.396.0",
    "pixi.js": "^8.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.21.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@sveltejs/adapter-node": "^5.2.0",
    "@sveltejs/kit": "^2.5.17",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@testing-library/svelte": "^5.1.0",
    "@types/howler": "^2.2.11",
    "@types/javascript-time-ago": "^2.0.8",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.8",
    "@vitest/coverage-v8": "^1.6.0",
    "changelogen": "^0.5.5",
    "eslint": "^9.5.0",
    "eslint-plugin-svelte": "^2.41.0",
    "happy-dom": "^14.12.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "madge": "^7.0.0",
    "svelte": "^5.0.0-next.165",
    "svelte-check": "^3.8.2",
    "svelte-eslint-parser": "^0.39.2",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "*.ts": "yarn run lint"
  }
}
